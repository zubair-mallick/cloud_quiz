{
  "compilerOptions": {
    "target": "es2018",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "preserveSymlinks": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "controllers/**/*.js",
    "routes/**/*.js",
    "models/**/*.js",
    "middlewares/**/*.js",
    "app.js",
    "server.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}

